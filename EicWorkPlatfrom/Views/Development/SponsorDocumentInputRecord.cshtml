<div class="panel panel-primary" ng-controller="dponsorDocumentInputRecordCtrl">
    <div class="panel-heading">
        <h6 class="panel-title">设计开发输入发文表</h6>
    </div>
    <div class="DivInput">
        <div class="panel-body">
            <div bs-pane data-title="设计开发输入登记" data-name="initTab">
                <div class="row">
                    <div class="col-md-8">
                        <div class="well">
                            <form role="form" name="formdevelopment" novalidate class="form-horizontal" onkeypress="if (event.keyCode === 13) return false;">
                                <fieldset>
                                    <legend>发文单位信息</legend>
                                    <div class="form-group">
                                        <label for="sdId" class="col-md-1 control-label">编号:</label>
                                        <div class="col-md-3">
                                            <input name="sdId" id="Text1" type="text" class="form-control" ng-model="vm.SdId" />
                                        </div>
                                        <label for="sdPutInDate" class="col-md-1 control-label">日期:</label>
                                        <div class="col-md-3">
                                            <input name="sdPutInDate" type="date" class="form-control" ng-model="vm.SdPutInDate" />
                                        </div>
                                        <label for="sdCustomer" class="col-md-1 control-label">顾客:</label>
                                        <div class="col-md-3">
                                            <input name="functionDescription" id="Text2" type="text" class="form-control" ng-model="vm.SdCustomer" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="triggerDevUnit" class="col-md-1 control-label">单位:</label>
                                        <div class="col-md-3">
                                            <input name="triggerDevUnit" id="Text3" type="text" class="form-control" ng-model="vm.TriggerDevUnit" />
                                        </div>
                                        <label for="fillInPreparer" class="col-md-1 control-label">填表人:</label>
                                        <div class="col-md-3">
                                            <input name="fillInPreparer" id="Text4" type="text" rows="2" class="form-control" ng-model="vm.FillInPreparer" />
                                        </div>
                                        <label for="fillInCheckPreparer" class="col-md-1 control-label">确认人:</label>
                                        <div class="col-md-3">
                                            <input name="fillInCheckPreparer" type="text" class="form-control" ng-model="vm.FillInCheckPreparer" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="expectedProductionNumber" class="col-md-1 control-label">预产量:</label>
                                        <div class="col-md-3">
                                            <input name="expectedProductionNumber" type="text" class="form-control" ng-model="vm.ExpectedProductionNumber" />
                                        </div>
                                        <label for="sampleDemandQuantity" type="text" class="col-md-1 control-label">样品数量:</label>
                                        <div class="col-md-3">
                                            <input name="sampleDemandQuantity" type="text" class="form-control" ng-model="vm.SampleDemandQuantity" />
                                        </div>
                                        <label for="demandDate" class="col-md-1 control-label">需求日期:</label>
                                        <div class="col-md-3">
                                            <input name="demandDate" type="date" class="form-control" ng-model="vm.DemandDate" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="productName" class="col-md-1 control-label">规范说明:</label>
                                        <div class="col-md-8">
                                            <textarea rows="2" name="productName" type="text" class="form-control" ng-model="vm. ProductName" />
                                        </div>
                                        <label for="productNameDescriptionAttachmentPath" class="col-md-1 control-label">规范附件:</label>
                                        <div class="col-md-2 pull-left" >
                                          
                                            @* 上传附件   (需要输入一个标识符) *@
                                           
                                                <div yl-upload-file></div>
                                                <div class="panel panel-default">
                                                </div>
                                       
                                        </div>
                                    </div>

                                </fieldset>
                                <hr />
                                <div class="alert alert-info">
                                    <div class="row">
                                        <div class="col-md-4">
                                        </div>
                                        <div class="col-md-6">
                                            <button class="btn btn-primary" ng-click="operate.saveAll(formdevelopment.$valid)"><i class="fa fa-save"></i>保存</button>
                                            <button class="btn btn-default" ng-click="operate.refresh()"><i class="fa fa-undo"></i>取消</button>
                                            <span yl-operatemsg-board></span>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <ul class="list-group">
                            <li class="list-group-item active">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h4 class="list-title">
                                            <i class="fa fa-list"></i>
                                            <span>列表</span>
                                        </h4>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <input class="form-control" type="text" />
                                            <div class="input-group-addon">
                                                <i class="fa fa-search"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item" ng-click="vmManager.selectDevelopmentOrder(item)"
                                data-title="设计编号:{{item.DevelopmentRmId}}" data-bs-tooltip
                                ng-repeat="item in vmManager.DevelopmentRmIds track by $index">
                                编号：
                                <span class="label label-success" style="cursor:pointer">{{item.RmId}}</span>
                                -----
                                设计产品名称：
                                <span>
                                    <i class="fa fa-envelope-o"></i>
                                    {{item.ProductName}}
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer" />
    </div>
</div>
